<div id="app-notes-sidebar">
    <!-- TODO: Add a filter functionality -->
    <span class="sidebar-notes-header">Notes</span>

    <div id="notes-list">
        <% notes.forEach(function(note) { %>
            <% include ./note %>
        <% }); %>
    </div>

    <!-- <div id="new-category-form" class="hidden-category-form"> -->
    <span class="sidebar-categories-header">Categories</span>
    
    <div id="categories-list">
        <% categories.forEach(function(category) { %>
            <% include ./category %>
        <% }); %>
    </div>
    
    <div class="sidebar-categories-sub-header">
        <span>Create a new category</span>
    </div>
    
    <form action="/dashboard/categories" method="post" id="create-category-form">
        <input type="text" id="new-category-input" placeholder="New category..." name="name">

        <div id="form-btns">
            <button id="new-category-btn">Create</button>
            <!-- <span id="cancel-category-btn" onClick="hideCategoryForm()">Cancel</span> -->
        </div>
    </form>
    <!-- </div> -->
</div>