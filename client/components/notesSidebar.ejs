<div id="app-notes-sidebar">
    <!-- TODO: Add a filter functionality -->
    <span class="sidebar-notes-header">Notes</span>

    <div id="notes-list">
        <% notes.forEach(function(note) { %>
            <% include ./note %>
        <% }); %>
    </div>

    <span class="sidebar-categories-header">Categories</span>
    
    <div id="categories-list">
        <% categories.forEach(function(category) { %>
            <% include ./category %>
        <% }); %>
    </div>

    <a href="/dashboard/new-category" id="create-new-category-btn">Create new <i class="fa fa-plus"></i></a>
</div>